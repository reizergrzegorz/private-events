<h1><%= @user.email %></h1>

<p><strong>Created Events</strong></p>
<% @created_events.each do |event| %>
    <div>
        <p>Title: <%= event.title %></p> 
        <p>Location: <%= event.location %></p>
        <p>Date: <%= event.date %></p>
    </div><br>
<% end %>

<p><strong>Upcoming Events</strong></p>
<% @upcoming_events.each do |event| %>
    <div>
        <p><%= link_to event.title, event %></p>  
    </div><br>
<% end %>    

<p><strong>Past Events</strong></p>
<% @past_events.each do |event| %>
    <div>
        <p><%= link_to event.title, event %></p>  
    </div><br>
<% end %> 

<p><%= link_to "Main", events_path %></p>

